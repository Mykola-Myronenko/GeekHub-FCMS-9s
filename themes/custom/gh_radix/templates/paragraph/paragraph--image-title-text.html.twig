{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 *
 * Available variables:
 * - paragraph: Full paragraph entity.
 *   Only method names starting with "get", "has", or "is" and a few common
 *   methods such as "id", "label", and "bundle" are available. For example:
 *   - paragraph.getCreatedTime() will return the paragraph creation timestamp.
 *   - paragraph.id(): The paragraph ID.
 *   - paragraph.bundle(): The type of the paragraph, for example, "image" or "text".
 *   - paragraph.getOwnerId(): The user ID of the paragraph author.
 *   See Drupal\paragraphs\Entity\Paragraph for a full list of public properties
 *   and methods for the paragraph object.
 * - content: All paragraph items. Use {{ content }} to print them all,
 *   or print a subset such as {{ content.field_example }}. Use
 *   {{ content|without('field_example') }} to temporarily suppress the printing
 *   of a given child element.
 * - attributes: HTML attributes for the containing element.
 *   The attributes.class element may contain one or more of the following
 *   classes:
 *   - paragraphs: The current template type (also known as a "theming hook").
 *   - paragraphs--type-[type]: The current paragraphs type. For example, if the paragraph is an
 *     "Image" it would result in "paragraphs--type--image". Note that the machine
 *     name will often be in a short form of the human readable label.
 *   - paragraphs--view-mode--[view_mode]: The View Mode of the paragraph; for example, a
 *     preview would result in: "paragraphs--view-mode--preview", and
 *     default: "paragraphs--view-mode--default".
 * - view_mode: View mode; for example, "preview" or "full".
 * - logged_in: Flag for authenticated user status. Will be true when the
 *   current user is a logged-in member.
 * - is_admin: Flag for admin user status. Will be true when the current user
 *   is an administrator.
 *
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}
{% set class = [
  content.field_subsection_class['#items'][0].value ~ '-subsection',
  content.field_column_class['#items'][0].value
] | join (' ') %}
{% block paragraph %}

  <div class="{{ class }}">
    {% block content %}

      {% if  content.field_subsection_class['#items'][0].value == 'about-us' %}
        {% if content.field_section_title.0 %}
          <div class="col-sm-3 {{ content.field_subsection_class['#items'][0].value ~ '-item-title' }}">
            {{ content.field_section_title }}
          </div>
        {% endif %}

        {% if content.field_section_description.0 %}
          <div class="col-sm-9 {{ content.field_subsection_class['#items'][0].value ~ '-item-description' }}">
            {{ content.field_section_description }}
          </div>
        {% endif %}
      {% endif %}

      {% if  content.field_subsection_class['#items'][0].value == 'practis-area' %}
        {% if content.field_section_image.0 %}
          <div class="{{ content.field_subsection_class['#items'][0].value ~ '-item-image' }}">
            {{ content.field_section_image }}
          </div>
        {% endif %}

        {% if content.field_section_title.0 %}
          <div class="{{ content.field_subsection_class['#items'][0].value ~ '-item-title' }}">
            {{ content.field_section_title }}
          </div>
        {% endif %}

        {% if content.field_section_description.0 %}
          <div class="{{ content.field_subsection_class['#items'][0].value ~ '-item-description' }}">
            {{ content.field_section_description }}
          </div>
        {% endif %}
      {% endif %}

      {% if  content.field_subsection_class['#items'][0].value == 'customer-reviews' %}
        <div class="col- col-lg-5">{{ content.field_section_image }}</div>
        <div class="col- col-lg-7">
          {% if content.field_section_description.0 %}
            <div class="{{ content.field_subsection_class['#items'][0].value ~ '-item-description' }}">
              <div class="quotes-icon">â€œ</div>
              {{ content.field_section_description }}
            </div>
          {% endif %}
          {% if content.field_section_title.0 %}
            <div class="{{ content.field_subsection_class['#items'][0].value ~ '-item-title' }}">
              {{ content.field_section_title }}
            </div>
          {% endif %}
          {% if  content.field_section_title_description.0 %}
            <div class="{{ content.field_subsection_class['#items'][0].value ~ '-item-title-description' }}">
              {{ content.field_section_title_description }}
            </div>
          {% endif %}
        </div>
        {{ content.field_first_column_class }}
      {% endif %}

      {% if  content.field_subsection_class['#items'][0].value == 'our-team' %}
        {% if content.field_section_image.0 %}
          <div class="{{ content.field_subsection_class['#items'][0].value ~ '-item-image' }}">
            {{ content.field_section_image }}
          </div>
        {% endif %}

        {% if content.field_section_title.0 %}
          <div class="{{ content.field_subsection_class['#items'][0].value ~ '-item-title' }}">
            {{ content.field_section_title }}
          </div>
        {% endif %}

        {% if content.field_section_description.0 %}
          <div class="{{ content.field_subsection_class['#items'][0].value ~ '-item-description' }}">
            {{ content.field_section_description }}
          </div>
        {% endif %}
      {% endif %}

      {% if  content.field_subsection_class['#items'][0].value == 'recent-publications' %}

        {% if content.field_section_image.0 %}
          <div class="{{ content.field_subsection_class['#items'][0].value ~ '-item-image' }}">
            {{ content.field_section_image }}
          </div>
        {% endif %}

        {% if content.field_section_title.0 %}
          <div class="{{ content.field_subsection_class['#items'][0].value ~ '-item-title' }}">
            {{ content.field_section_title }}
          </div>
        {% endif %}

        {% if content.field_section_description.0 %}
          <div class="{{ content.field_subsection_class['#items'][0].value ~ '-item-description' }}">
            {{ content.field_section_description }}
          </div>
        {% endif %}
      {% endif %}

    {% endblock %}

    {% if  content.field_subsection_class['#items'][0].value == 'faq' %}
      {% if content.field_section_title.0 %}
        <div class="{{ content.field_subsection_class['#items'][0].value ~ '-item' }}">
          {{ content.field_section_title }}
        </div>
      {% endif %}
    {% endif %}
  </div>

{% endblock paragraph %}
